---
interface Props {
  title: string;
  descriptionInParagraphs: string[];
  color: "red" | "blue" | "orange";
}

const { title, descriptionInParagraphs, color } = Astro.props;
---

<article
  class:list={[
    "rounded border py-7 pt-16 px-4 flex flex-col gap-4 w-full",
    {
      "blue-gradient-top border-palette-mgd": color === "blue",
      "red-gradient-top border-palette-red": color === "red",
      "orange-gradient-top border-palette-orange": color === "orange",
    },
  ]}
>
  <header class="flex flex-col gap-6">
    <div
      class:list={[
        "grid place-content-center rounded-full w-fit border p-2",
        {
          "blue-gradient-bottom border-palette-mgd": color === "blue",
          "red-gradient-bottom border-palette-red": color === "red",
          "orange-gradient-bottom border-palette-orange": color === "orange",
        },
      ]}
    >
      <slot name="icon" />
    </div>
    <h3 class="font-bold text-xl">{title}</h3>
  </header>
  {
    descriptionInParagraphs.map((paragraph) => (
      <p class="text-palette-lightGray text-lg">{paragraph}</p>
    ))
  }
</article>

<style scoped>
  .blue-gradient-top {
    background: rgb(0, 104, 132);
    background: radial-gradient(
      circle at center top,
      rgba(0, 104, 132, 1) 0%,
      rgba(0, 0, 63, 0.4) 70%
    );
  }

  .red-gradient-top {
    background: radial-gradient(
      circle at center top,
      #c6394c 0%,
      rgba(0, 0, 63, 0.4) 70%
    );
  }

  .orange-gradient-top {
    background: rgb(244, 158, 88);
    background: radial-gradient(
      circle at center top,
      rgba(244, 158, 88, 1) 0%,
      rgba(41, 131, 141, 0.4) 70%
    );
  }

  .blue-gradient-bottom {
    background: radial-gradient(
      circle at center bottom,
      #29838d 0%,
      rgba(0, 0, 63, 0.4) 70%
    );
  }

  .red-gradient-bottom {
    background: radial-gradient(
      circle at center bottom,
      #c6394c 0%,
      rgba(0, 0, 63, 0.4) 70%
    );
  }

  .orange-gradient-bottom {
    background: rgb(244, 158, 88);
    background: radial-gradient(
      circle at center bottom,
      rgba(244, 158, 88, 1) 0%,
      rgba(41, 131, 141, 0.4) 70%
    );
  }
</style>
